<style>
    .playlists-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: var(--spacing-xl);
    }

    .create-playlist-btn {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        padding: var(--spacing-sm) var(--spacing-lg);
        background: var(--color-accent);
        color: #000;
        border: none;
        border-radius: 20px;
        font-size: var(--font-size-md);
        font-weight: var(--font-weight-semibold);
        cursor: pointer;
        transition: all var(--transition-base);
        box-shadow: var(--shadow-md);
    }

    .create-playlist-btn:hover {
        background: var(--color-accent-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-glow);
    }

    .playlists-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: var(--spacing-lg);
    }

    .playlist-card {
        background: var(--color-bg-surface);
        border-radius: var(--border-radius);
        overflow: hidden;
        cursor: pointer;
        transition: all var(--transition-base);
        border: 1px solid var(--color-border);
        position: relative;
    }

    .playlist-card:hover {
        transform: translateY(-4px);
        border-color: var(--color-accent);
        box-shadow: var(--shadow-glow);
    }

    .playlist-cover {
        width: 100%;
        aspect-ratio: 1;
        object-fit: cover;
        background: linear-gradient(135deg, var(--green-400), var(--green-600));
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .playlist-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .playlist-cover-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--green-400), var(--green-600));
    }

    .playlist-cover-placeholder i {
        font-size: 64px;
        color: rgba(0, 0, 0, 0.3);
    }

    .playlist-info {
        padding: var(--spacing-md);
    }

    .playlist-name {
        font-size: var(--font-size-md);
        font-weight: var(--font-weight-bold);
        margin-bottom: var(--spacing-xs);
        color: var(--color-text-primary);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .playlist-meta {
        font-size: var(--font-size-sm);
        color: var(--color-text-secondary);
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
    }

    .playlist-visibility {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-xs);
        padding: 2px 8px;
        background: rgba(29, 185, 84, 0.15);
        border-radius: 12px;
        font-size: var(--font-size-xs);
        color: var(--color-accent);
    }

    .playlist-visibility.private {
        background: rgba(255, 255, 255, 0.1);
        color: var(--color-text-muted);
    }

    .play-playlist-overlay {
        position: absolute;
        bottom: 80px;
        right: 16px;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--color-accent);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-lg);
        opacity: 0;
        transform: translateY(10px);
        transition: all var(--transition-base);
        cursor: pointer;
    }

    .playlist-card:hover .play-playlist-overlay {
        opacity: 1;
        transform: translateY(0);
    }

    .play-playlist-overlay:hover {
        transform: scale(1.1);
        box-shadow: var(--shadow-glow);
    }

    .play-playlist-overlay i {
        color: #000;
        font-size: 20px;
        margin-left: 2px;
    }

    .section-header {
        margin: var(--spacing-2xl) 0 var(--spacing-lg);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .section-header h2 {
        margin: 0;
    }

    .empty-state {
        text-align: center;
        padding: var(--spacing-2xl);
        color: var(--color-text-secondary);
    }

    .empty-state i {
        font-size: 64px;
        margin-bottom: var(--spacing-md);
        opacity: 0.3;
    }

    .empty-state p {
        margin-bottom: var(--spacing-md);
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    .modal.active {
        display: flex;
    }

    .modal-content {
        background: var(--color-bg-panel);
        border-radius: var(--border-radius);
        padding: var(--spacing-xl);
        max-width: 500px;
        width: 90%;
        border: 1px solid var(--color-border);
    }

    .modal-content h2 {
        margin-bottom: var(--spacing-lg);
    }

    .form-group {
        margin-bottom: var(--spacing-md);
    }

    .form-group label {
        display: block;
        margin-bottom: var(--spacing-xs);
        color: var(--color-text-primary);
        font-size: var(--font-size-sm);
        font-weight: var(--font-weight-medium);
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: var(--spacing-sm);
        background: var(--color-bg-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius);
        color: var(--color-text-primary);
        font-size: var(--font-size-sm);
        font-family: var(--font-family);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 80px;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--color-accent);
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
    }

    .checkbox-group input[type="checkbox"] {
        width: auto;
    }

    .modal-actions {
        display: flex;
        gap: var(--spacing-sm);
        justify-content: flex-end;
        margin-top: var(--spacing-lg);
    }

    .btn {
        padding: var(--spacing-sm) var(--spacing-lg);
        border: none;
        border-radius: var(--border-radius);
        cursor: pointer;
        font-size: var(--font-size-sm);
        font-weight: var(--font-weight-medium);
        transition: all var(--transition-base);
    }

    .btn-secondary {
        background: var(--color-bg-surface);
        color: var(--color-text-primary);
        border: 1px solid var(--color-border);
    }

    .btn-secondary:hover {
        background: var(--color-bg-secondary);
    }

    .btn-primary {
        background: var(--color-accent);
        color: #000;
    }

    .btn-primary:hover {
        background: var(--color-accent-hover);
    }
</style>

<div class="playlists-header">
    <h1>Your Playlists</h1>
    <button class="create-playlist-btn" id="create-playlist-btn">
        <i class="fa-solid fa-plus"></i>
        Create Playlist
    </button>
</div>

<div class="playlists-grid" id="my-playlists"></div>

<div class="section-header">
    <h2>Public Playlists</h2>
    <a href="#" style="color: var(--color-accent); text-decoration: none; font-size: var(--font-size-sm);">
        View All
    </a>
</div>

<div class="playlists-grid" id="public-playlists"></div>

<div class="modal" id="create-modal">
    <div class="modal-content">
        <h2>Create New Playlist</h2>
        <form id="create-playlist-form">
            <div class="form-group">
                <label for="playlist-name">Playlist Name *</label>
                <input type="text" id="playlist-name" name="playlist_name" required placeholder="My Awesome Playlist">
            </div>
            <div class="form-group">
                <label for="playlist-description">Description</label>
                <textarea id="playlist-description" name="description"
                    placeholder="Describe your playlist..."></textarea>
            </div>
            <div class="form-group">
                <div class="checkbox-group">
                    <input type="checkbox" id="playlist-public" name="is_public" checked>
                    <label for="playlist-public">Make this playlist public</label>
                </div>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn btn-secondary" id="cancel-btn">Cancel</button>
                <button type="submit" class="btn btn-primary">Create Playlist</button>
            </div>
        </form>
    </div>
</div>

<script type="module">
    const currentUser = '<%= JSON.stringify(user) %>';

    async function loadPlaylists() {
        try {
            const response = await fetch(`/api/users/${currentUser.user_id}/playlists`);
            const myPlaylists = await response.json();
            renderPlaylists(myPlaylists, 'my-playlists', true);
        } catch (error) {
            console.error('Error loading user playlists:', error);
        }

        // Load public playlists
        try {
            const response = await fetch('/api/playlists/public?limit=12');
            const publicPlaylists = await response.json();
            renderPlaylists(publicPlaylists, 'public-playlists', false);
        } catch (error) {
            console.error('Error loading public playlists:', error);
        }
    }

    function renderPlaylists(playlists, containerId, isOwned) {
        const container = document.getElementById(containerId);
        container.innerHTML = '';

        if (playlists.length === 0) {
            container.innerHTML = `
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <i class="fa-solid fa-list-music"></i>
                    <p>${isOwned ? "You haven't created any playlists yet" : "No public playlists available"}</p>
                    ${isOwned ? '<button class="create-playlist-btn" onclick="document.getElementById(\'create-playlist-btn\').click()"><i class="fa-solid fa-plus"></i> Create Your First Playlist</button>' : ''}
                </div>
            `;
            return;
        }

        playlists.forEach(playlist => {
            const card = document.createElement('div');
            card.className = 'playlist-card';
            card.innerHTML = `
                <div class="playlist-cover">
                    ${playlist.cover_image_url
                    ? `<img src="${playlist.cover_image_url}" alt="${playlist.playlist_name}">`
                    : `<div class="playlist-cover-placeholder"><i class="fa-solid fa-music"></i></div>`
                }
                    <div class="play-playlist-overlay" data-playlist-id="${playlist.playlist_id}">
                        <i class="fa-solid fa-play"></i>
                    </div>
                </div>
                <div class="playlist-info">
                    <h3 class="playlist-name">${playlist.playlist_name}</h3>
                    <div class="playlist-meta">
                        <span class="playlist-visibility ${playlist.is_public ? 'public' : 'private'}">
                            <i class="fa-solid fa-${playlist.is_public ? 'globe' : 'lock'}"></i>
                            ${playlist.is_public ? 'Public' : 'Private'}
                        </span>
                    </div>
                </div>
            `;

            card.addEventListener('click', (e) => {
                if (!e.target.closest('.play-playlist-overlay')) {
                    window.location.href = `/playlist/${playlist.playlist_id}`;
                }
            });

            const playBtn = card.querySelector('.play-playlist-overlay');
            playBtn.addEventListener('click', async (e) => {
                e.stopPropagation();
                await playPlaylist(playlist.playlist_id);
            });

            container.appendChild(card);
        });
    }

    async function playPlaylist(playlistId) {
        try {
            const response = await fetch(`/api/playlists/${playlistId}`);
            const data = await response.json();

            if (data.tracks && data.tracks.length > 0 && window.musicPlayer) {
                await window.musicPlayer.play(data.tracks[0]);
            }
        } catch (error) {
            console.error('Error playing playlist:', error);
        }
    }

    const modal = document.getElementById('create-modal');
    const createBtn = document.getElementById('create-playlist-btn');
    const cancelBtn = document.getElementById('cancel-btn');
    const form = document.getElementById('create-playlist-form');

    createBtn.addEventListener('click', () => {
        modal.classList.add('active');
    });

    cancelBtn.addEventListener('click', () => {
        modal.classList.remove('active');
        form.reset();
    });

    modal.addEventListener('click', (e) => {
        if (e.target === modal) {
            modal.classList.remove('active');
            form.reset();
        }
    });

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const data = {
            playlist_name: formData.get('playlist_name'),
            description: formData.get('description'),
            is_public: formData.get('is_public') === 'on',
            user_id: currentUser.user_id
        };

        try {
            const response = await fetch('/api/playlists', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                modal.classList.remove('active');
                form.reset();
                loadPlaylists();
            } else {
                alert('Failed to create playlist');
            }
        } catch (error) {
            console.error('Error creating playlist:', error);
            alert('Failed to create playlist');
        }
    });

    loadPlaylists();
</script>