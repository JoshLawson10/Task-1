{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["../config/*"],
      "@lib/*": ["../lib/*"],
      "@models/*": ["../models/*"]
    },
    "lib": ["ES2022", "DOM"]
  },
  "include": ["**/*.ts", "src/public/js/**/*"],
  "exclude": ["node_modules", "dist"]
}
