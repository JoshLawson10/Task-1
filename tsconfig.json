{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@models/*": ["models/*"],
      "@middleware/*": ["src/middleware/*"]
    },
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src", "lib", "models", "tools", "config"],
  "exclude": ["node_modules", "dist"]
}
